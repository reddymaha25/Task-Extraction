# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://user@localhost:5432/task_extraction
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# LLM Configuration
# Default provider: OPEN_SOURCE, OPENAI, or AZURE_OPENAI
DEFAULT_LLM_PROVIDER=OPEN_SOURCE

# Open-source LLM (e.g., Ollama)
OPEN_LLM_BASE_URL=http://localhost:11434
OPEN_LLM_MODEL=llama2
OPEN_LLM_TEMPERATURE=0.1
OPEN_LLM_MAX_TOKENS=4096
OPEN_LLM_TIMEOUT=300000

# Azure OpenAI (optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# File Upload
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports

# Integration: Jira
JIRA_ENABLED=false
JIRA_BASE_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEY=

# Integration: Asana
ASANA_ENABLED=false
ASANA_ACCESS_TOKEN=
ASANA_WORKSPACE_ID=

# Integration: Microsoft Planner
PLANNER_ENABLED=false
PLANNER_CLIENT_ID=
PLANNER_CLIENT_SECRET=
PLANNER_TENANT_ID=

# Integration: Microsoft To Do
MICROSOFT_TODO_ENABLED=false
MICROSOFT_TODO_ACCESS_TOKEN=
MICROSOFT_TODO_LIST_ID=tasks

# Integration: Generic Webhook
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=change-this-to-random-secret
WEBHOOK_BATCH_MODE=false

# Security
JWT_SECRET=change-this-to-random-secret
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email parsing settings
# Enable to parse .eml files with nested RFC822 messages as threads
PARSE_EMAIL_THREADS=true
